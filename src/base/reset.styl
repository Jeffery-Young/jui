/*
 * 精简版的reset方法
 */

*,
*:before,
*:after {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
*:focus {
    outline: none;
}

body, div, dl, dt, dd, ul, ol, li, p, blockquote, th, td, 
h1, h2, h3, h4, h5, h6, 
form, fieldset, legend, input, textarea {
    margin: 0;
    padding: 0;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

fieldset,
img {
    border:0;
}

li {
    list-style: none;
}

caption,
th {
    text-align: left;
}

q:before,
q:after {
    content: "";
}

input:password {
    ime-mode: disabled;
}